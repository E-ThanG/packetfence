0.0.0.0:9999 {
  tls /usr/local/pf/conf/ssl/server.crt /usr/local/pf/conf/ssl/server.key

  log / stdout "api-frontend-access {remote} - {user} [{when}] \"{method} {uri} {proto}\" {status} {size} \"{>Referer}\" \"{>User-Agent}\""

  errors {
    502 /usr/local/pf/html/pfappserver/root/errors/502.json
    503 /usr/local/pf/html/pfappserver/root/errors/503.json
  }

  pfconfigpool

  logger {
    level INFO
  }
  statsd {
    proto udp
    prefix api
  }

  cors /api/v1 {
    allowed_headers Authorization,Content-Type,X-PacketFence-Tenant-Id
    methods GET,OPTIONS,POST,DELETE,PUT,PATCH
  }

  cors /api/v1.1 {
    allowed_headers Authorization,Content-Type,X-PacketFence-Tenant-Id
    methods GET,OPTIONS,POST,DELETE,PUT,PATCH
  }

  api-aaa
  
  api

  log-tailer

  # Job status access
  job-status

  # pfipset API access
  proxy /api/v1/ipset/ [% ENV.env_or_default("PFHTTPD_TCP_HOST", "127.0.0.1") %]:[% ENV.env_or_default("PFHTTPD_HOST_PORT", "22223") %] {
    transparent
  }
  
  # pfdhcp API access
  proxy /api/v1/dhcp/ [% ENV.env_or_default("PFDHCP_TCP_HOST", "127.0.0.1") %]:[% ENV.env_or_default("PFDHCP_HOST_PORT", "22222") %] {
    transparent
  }
  
  # pfsso API access
  proxy /api/v1/firewall_sso/ [% ENV.env_or_default("PFFIREWALL_SSO_TCP_HOST", "127.0.0.1") %]:[% ENV.env_or_default("PFFIREWALL_SSO_HOST_PORT", "8777") %] {
    transparent
  }

  # pfpki API access
  proxy /api/v1/pki/ [% ENV.env_or_default("PFPKI_TCP_HOST", "127.0.0.1") %]:[% ENV.env_or_default("PFPKI_HOST_PORT", "22225") %] {
    transparent
  }
  
  # Everything else goes to the Perl API
  proxy /api/v1/ [% ENV.env_or_default("PFPERL_API_TCP_HOST", "127.0.0.1") %]:[% ENV.env_or_default("PFPERL_API_HOST_PORT", "22224") %] {
    transparent
    timeout 10m
  }

  # Everything else goes to the Perl API
  proxy /api/v1.1/ [% ENV.env_or_default("PFPERL_API_TCP_HOST", "127.0.0.1") %]:[% ENV.env_or_default("PFPERL_API_HOST_PORT", "22224") %] {
    transparent
    timeout 10m
  }

  # doh forward
  proxy /dns-query http://[% ENV.env_or_default("PFDNS_TCP_HOST", "127.0.0.1") %]:[% ENV.env_or_default("PFDNS_HOST_PORT", "853") %] {
      transparent
  }

  timeouts {
    write 10m
    idle 10m
  }
}

